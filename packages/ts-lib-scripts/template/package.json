{
  "name": "my-ts-lib",
  "version": "0.1.0",
  "license": "MIT",
  "description": "描述库的用途",
  "main": "dist/index.js",
  "umd:main": "dist/sinoui-use-rest-api.umd.production.js",
  "module": "dist/sinoui-use-rest-api.es.production.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "start": "ts-lib-scripts watch",
    "test": "ts-lib-scripts test",
    "build": "ts-lib-scripts build",
    "format": "ts-lib-scripts format",
    "lint": "ts-lib-scripts lint",
    "prepublishOnly": "yarn build"
  },
  "prettier": {
    "printWidth": 80,
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always"
  },
  "eslintConfig": {
    "extends": "ts-lib"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*.{ts,tsx}": [
      "cross-env CI=true ts-lib-scripts test",
      "eslint --fix --color",
      "git add"
    ]
  }
}
