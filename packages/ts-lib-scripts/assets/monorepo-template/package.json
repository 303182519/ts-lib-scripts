{
  "name": "my-ts-lib",
  "license": "MIT",
  "description": "描述库的用途",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "ts-lib-tools test",
    "build": "lerna run build",
    "format": "ts-lib-tools format",
    "lint": "ts-lib-tools lint",
    "gen": "ts-lib-tools gen-module"
  },
  "prettier": {
    "printWidth": 80,
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always"
  },
  "eslintConfig": {
    "extends": "ts-lib"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/*.{ts,tsx}": [
      "cross-env CI=true ts-lib-tools test",
      "eslint --fix --color",
      "git add"
    ]
  }
}
